{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "atoms/*": ["src/components/atoms/*"],
      "molecules/*": ["src/components/molecules/*"],
      "organisms/*": ["src/components/organisms/*"],
      "templates/*": ["src/components/templates/*"],
      "api/*": ["src/api/*"],
      "auth/*": ["src/auth/*"],
      "utils/*": ["src/utils/*"],
      "screens/*": ["src/screens/*"],
      "common/*": ["src/common/*"],
      "constants/*": ["src/constants/*"],
      "types/*": ["src/types/*"],
      "navigation/*": ["src/navigation/*"],
      "container/*": ["src/container/*"],
      "native_modules/*": ["src/native_modules/*"]
    }
  },
  "extensions": [
    ".js",
    ".jsx",
    ".ts",
    ".tsx",
    ".android.js",
    ".android.tsx",
    ".ios.js",
    ".ios.tsx",
    ".story.tsx",
  ],
  "include": [
    "src/screens/**/*.ts",
    "src/screens/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx"
  ],
  "exclude": [
      "node_modules",
      "**/node_modules/*"
  ]
}