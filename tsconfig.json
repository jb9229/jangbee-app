{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "target": "ES2018",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "atoms/*": ["src/components/atoms/*"],
      "molecules/*": ["src/components/molecules/*"],
      "organisms/*": ["src/components/organisms/*"],
      "templates/*": ["src/components/templates/*"],
      "api/*": ["src/api/*"],
      "auth/*": ["src/auth/*"],
      "utils/*": ["src/utils/*"],
      "screens/*": ["src/screens/*"],
      "common/*": ["src/common/*"],
      "constants/*": ["src/constants/*"],
      "container/*": ["src/container/*"],
      "types/*": ["src/types/*"],
      "navigation": ["src/navigation"],
      "native_modules": ["src/native_modules"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "sty"],
        "lint": {
          "validProperties": [
            "aspect-ratio",
            "elevation",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color",
            "padding-horizontal"
          ]
        }
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/__tests__",
    "storybook/**/*.ts",
    "storybook/**/*.tsx",
    "src/index.web.js"
  ],
  "exclude": ["node_modules", "src/__generated__"],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
        // "tsConfigFile": "my-tsconfig.json"
      }
    }
  }
}
